<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

<!-- jQuery library -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@7.12.15/dist/sweetalert2.all.min.js"></script>

<!-- Latest compiled JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <title>Document</title>
    <style>
        *{
            margin:0;
            padding: 0%;
            box-sizing: border-box;
        }
        .container{
            width: 100vw;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-image: url('https://wonderfulengineering.com/wp-content/uploads/2014/05/airplane-wallpaper-2.jpg');
            background-position: center;
            background-size: cover;
        }
        input[type=email]{
            width: 400px;
            padding: 20px;
        }
        input[type=password]{
            width: 400px;
            padding: 20px;
        }
        
    </style>
</head>
<body>
  <% if(typeof message!='undefined') 
  {
    %>
    <script language='javascript'>
      swal('Oops!','Login unsuccessful','error');
   </script>
   <%
  }
  %>
  <% if(typeof password!='undefined') 
  {
    %>
    <script language='javascript'>
      swal('Congratulations','Password changed','success');
   </script>
   <%
  }
  %>
    <div class="container">
       <div class="main">
           <h1 style="text-align: center; margin-bottom: 30px;font-size: 50px;">
               Login Page
           </h1>
           
        <form action="/loginned" method="POST">
            <div class="form-group">
              
              <input type="email" name="email" required class="form-control" placeholder="Enter email" id="email" autocomplete="off">
            </div>
            <div class="form-group">
             
              <input type="password" name="password" required class="form-control" placeholder="Enter password" autocomplete="off" id="pwd">
            </div>
           
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
          <p style="margin-top: 20px;">
            <a href="/forgot" style="color: red;font-size:14px;text-decoration: none;">
            Forgot Password?
          </a>

        </p>
        <p style="margin-top: 20px;">
          <a href="/signup" style="color: red;font-size:14px;text-decoration: none;">
         Do not have an account?
        </a>

      </p>
       </div>
    </div>
</body>
</html>